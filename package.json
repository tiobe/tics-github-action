{
  "name": "tics-github-action",
  "version": "2.0.0",
  "description": "The TiCS Github action integrates TiCS Client analysis to measure your code quality. The incorporated Quality gating feature enables you to analyze and decorate pull requests.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build",
    "test": "jest",
    "test-coverage": "jest --coverage --collectCoverageFrom='src/**'",
    "all": "npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiobe/tics-github-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "TIOBE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiobe/tics-github-action/issues"
  },
  "homepage": "https://github.com/tiobe/tics-github-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "canonical-path": "^1.0.0",
    "compare-versions": "^6.0.0-rc.1",
    "proxy-agent": "^5.0.0",
    "semver": "^7.3.8",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.15.5",
    "@types/node-fetch": "^2.6.2",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/parser": "^5.55.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "jest": "^27.5.1",
    "jest-mock": "^29.5.0",
    "prettier": "2.8.6",
    "ts-jest": "^27.1.2",
    "typescript": "^4.9.5"
  }
}
